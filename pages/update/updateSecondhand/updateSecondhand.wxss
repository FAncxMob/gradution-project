#releaseLegwork {
    display: flex;
    align-items: center;
    justify-content: center;
    padding-top: 20rpx;
    min-height: 90vh;
}

#releaseLegwork .login-container {
    width: 95vw;
    background: #4C4C4C;
    box-shadow: 20px 0 20px -20px #000000, -20px 0 20px -20px #000000;
    border-radius: 10px;
    padding-top: 50rpx;
}

#releaseLegwork .login-container .login-form {
    display: flex;
    flex-direction: column;
    align-items: center;
}

#releaseLegwork .login-container .login-form .section {
    color: #cccccc;
    margin-bottom: 20rpx;
    padding-bottom: 5rpx;
    width: 90vw;
}

#releaseLegwork .login-container .login-form .section .choosePicBox {
    display: flex;
    flex-wrap: wrap;
}

#releaseLegwork .login-container .login-form .section .choosePicBox .imgWrapper {
    width: 30%;
    height: 0;
    position: relative;
    padding-bottom: 30%;
    margin-right: 20rpx;
}

#releaseLegwork .login-container .login-form .section .choosePicBox .imgWrapper image {
    width: 100%;
    height: 100%;
    position: absolute;
}

#releaseLegwork .login-container .login-form .section .choosePicBox .imgWrapper .icon {
    width: 100%;
    height: 100%;
    position: absolute;
}

#releaseLegwork .login-container .login-form .section .choosePicBox .imgWrapper .adjust {
    box-sizing: border-box;
}

#releaseLegwork .login-container .login-form .section .picIcon {
    width: 30%;
    min-height: 180rpx;
}

#releaseLegwork .login-container .login-form .section .address {
    width: 90vw;
    border-bottom: 2rpx solid #cccccc;
}

#releaseLegwork .login-container .login-form .section input {
    width: 90vw;
    border-bottom: 2rpx solid #cccccc;
}

#releaseLegwork .login-container .login-form .section textarea {
    width: 90vw;
    border-bottom: 2rpx solid #cccccc;
}

#releaseLegwork .login-container .login-form .section .input {
    color: #cccccc;
}

#releaseLegwork .login-container .login-form .section .section-title {
    color: #f5f5f5;
    font-weight: bold;
    margin-bottom: 10rpx;
}

#releaseLegwork .login-container .login-form .imageBx {
    border-bottom: none;
}

#releaseLegwork .login-container .login-form .btn-area {
    margin: 50rpx 0;
}

#releaseLegwork .login-container .login-form .title {
    margin: 30rpx 0;
    color: #F6E662;
    font-size: 35rpx;
    font-weight: bold;
    text-align: center;
}

page {
