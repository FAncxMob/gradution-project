<view id="releaseLegwork">
    <view class='login-container setBorder twoSideShadow'>
        <form class="login-form " bindsubmit="submitForm">
            <view class="section">
                <view class="section-title">标题 <text class="red-1">*</text></view>
                <textarea name="title" placeholder-class="input" auto-height placeholder="请输入标题" />
                </view>
            <view class="section">
                <view class="section-title">跑腿内容  <text class="red-1">*</text></view>
                <textarea  name="desc" placeholder-class="input" auto-height placeholder="请输入跑腿需求描述" />
            </view>
            <view class="section">
                <view class="section-title">标签</view>
                <textarea  placeholder-class="input" name="tag" auto-height placeholder="请输入标签，如代取快递，占座等" />
            </view>
            <view class="section mt40">
                <view class="section-title">收货地址 <text class="red-1">*</text></view>
                <view bindtap="chooseAddress" class="address text-ellipsis-row2">
                    <block wx:if="{{addressData._id}}">
                        <view>姓名：{{addressData.name}}</view>
                        <view>电话：{{addressData.tel}}</view>
                        <view class="text-ellipsis-row3">详细地址：{{addressData.location}}</view>
                    </block>
                    <block wx:else>
                        请选择收货地址
                    </block>
                </view>
            </view>
            <view class="section ">
                <view class="section-title">期望送达时间 <text class="red-1">*</text></view>
                <pickerYMDHM class="" name="expectedTime" placeholder = "{{placeholder}}" date = "{{date}}" disabled = "{{disabled}}" bind:onPickerChange="onPickerChange" startDate="{{startDate}}" endDate="{{endDate}}">
                </pickerYMDHM>
            </view>
            <view class="section imageBx">
                <view class="section-title">选择图片</view>
                <block wx:if="{{tempFilePaths.length}}">
                    <view  class="choosePicBox" > 
                        <!-- 为了让图片的高度等于高度，利用padding垂直的百分比是按照父元素的宽度来计算来进行 -->
                        <view class="imgWrapper mb20" wx:for="{{tempFilePaths}}" wx:key="{{index}}">
                            <image mode="cover" src="{{item}}"></image>
                         </view>
                         <view bindtap="choosePic" class="imgWrapper ">
                         <image mode="cover"  class="adjust setBorder gray-1 fz30 p30" src="/icon/plus.png"></image>
                         </view>

                    </view>
                </block>
                <block wx:else>
                    <view  bindtap="choosePic" class="picIcon setBorder df align-center justify-center">
                        <text class=" fwb fz100 iconfont icon-tianjia"></text>
                    </view>
                </block>
               
            </view>
            
            <view class="btn-area">
                <button type="primary" formType="submit"> 发布
                </button>
            </view>
        </form>
    </view>
</view>