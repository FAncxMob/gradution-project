<view id='allFinished' class="bg-gray-1">
    <view class="switchTab-wrapper">
        <SwitchTab currentSelect="{{currentSelect}}" arr="{{tabArr}}" bindhandleSelect="handleSelect" />
    </view>


    <block wx:if="{{currentSelect===0}}">
        <ShowPostList haveOperation="{{false}}" data="{{legWork}}" noDataHeight="700rpx" title="还没有任何取消的跑腿订单...">
        </ShowPostList>
    </block>
    <block wx:if="{{currentSelect===1}}">
        <ShowPostList haveOperation="{{false}}" data="{{secondHand}}" noDataHeight="700rpx" title="还没有任何取消的二手交易订单...">
        </ShowPostList>
    </block>
    <!-- TODO:校园跑腿 二手交易下面再加一个切换Bar :全部| 我发布的|我接受的 -->

</view>