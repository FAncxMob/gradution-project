#userInfo {
  height: 100vh;
  width: 100vw;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #2E2E2E;
}

#userInfo .userInfo-container {
  width: 90vw;
  background: #4C4C4C;
  box-shadow: 20px 0 20px -20px #000000, -20px 0 20px -20px #000000;
  border-radius: 10px;
  padding-top: 20rpx;
}

#userInfo .userInfo-container .userInfo-form {
  display: flex;
  flex-direction: column;
  align-items: center;
}

#userInfo .userInfo-container .userInfo-form .section {
  color: #cccccc;
  margin-bottom: 20rpx;
  padding-bottom: 5rpx;
  border-bottom: 2rpx solid #cccccc;
}

#userInfo .userInfo-container .userInfo-form .section .input {
  color: #cccccc;
}

#userInfo .userInfo-container .userInfo-form .section .section-title {
  color: #f5f5f5;
  font-weight: bold;
  margin-bottom: 10rpx;
}

#userInfo .userInfo-container .userInfo-form .btn-area {
  margin: 50rpx 0;
}

#userInfo .userInfo-container .userInfo-form .title {
  margin: 30rpx 0;
  color: #F6E662;
  font-size: 35rpx;
  font-weight: bold;
  text-align: center;
}