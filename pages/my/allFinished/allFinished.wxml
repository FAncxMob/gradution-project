<view id='allFinished' class="bg-gray-1">
    <SwitchTab currentSelect="{{currentSelect}}" arr="{{tabArr}}" bindhandleSelect="handleSelect" />

    <block wx:if="{{currentSelect===0}}">
        <ShowPostList haveOperation="{{false}}" data="{{legWork}}" noDataHeight="700rpx" title="还没有完成任何跑腿订单...">
        </ShowPostList>
    </block>
    <block wx:if="{{currentSelect===1}}">
        <ShowPostList haveOperation="{{false}}" data="{{secondHand}}" noDataHeight="700rpx" title="还没有完成任何二手交易订单...">
        </ShowPostList>
    </block>
    <!-- TODO:校园跑腿 二手交易下面再加一个切换Bar :全部| 我发布的|我接受的 -->

</view>