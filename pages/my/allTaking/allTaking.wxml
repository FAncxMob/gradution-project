<view id='allTaking' class="bg-gray-1">
    <view class="switchTab-wrapper">
        <SwitchTab currentSelect="{{currentSelect}}" arr="{{tabArr}}" bindhandleSelect="handleSelect" />
    </view>

    <block wx:if="{{currentSelect===0}}">
        <MyOrderList data="{{legWork}}" title="还没有接收任何跑腿订单..." haveOperation="{{false}}" noDataHeight="500rpx">
        </MyOrderList>
    </block>
    <block wx:if="{{currentSelect===1}}">
        <MyOrderList data="{{secondHand}}" title="还没有接收任何二手交易订单..." haveOperation="{{false}}" noDataHeight="500rpx">
        </MyOrderList>
    </block>
</view>