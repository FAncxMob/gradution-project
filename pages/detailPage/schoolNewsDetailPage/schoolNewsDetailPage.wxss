.indexDetailPage {
    overflow: hidden;
    /* margin: 10rpx; */
    padding-bottom: 140rpx;
}

.indexDetailPage .detailInfo {
    position: relative;
}

.indexDetailPage .operation {
    background: #f5f5f5;
    position: fixed;
    left: 0;
    bottom: 0;
    height: 110rpx;
    width: 100vw;
    z-index: 99999;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
}




.indexDetailPage .commenting .commentInput {
    margin-right: 20rpx;
    background: #f0f0f0;
    padding: 0 15rpx;
    border-radius: 12rpx;
    font-size: 30rpx;
}

.status {
    position: absolute;
    right: 0rpx;
    top: 0rpx;
    font-size: 40rpx;
    display: block;
    border: 2rpx solid #a09393;
    padding: 30rpx 10rpx;
    border-radius: 50%;
    color: white;
    background-color: rgba(0, 0, 0, .5);
    transform: rotate(-25deg);
    z-index: 3;
}

.twoSideShadow {
    box-shadow: 20rpx 0 20rpx -20rpx #766d8b, -20rpx 0 20rpx -20rpx #766d8b;
}