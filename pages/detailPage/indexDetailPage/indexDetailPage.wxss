.indexDetailPage {
  overflow: hidden;
}

.indexDetailPage .detailInfo {
  position: relative;
}

.indexDetailPage .detailInfo .sign {
  font-size: 40rpx;
  color: #fe3928;
  text-shadow: 3rpx 3rpx 6rpx #fe3928;
  position: absolute;
  right: 20rpx;
}

.indexDetailPage .userComments {
  overflow: hidden;
}

.indexDetailPage .operation {
  background: #f5f5f5;
  position: fixed;
  left: 0;
  bottom: 0;
  height: 110rpx;
  width: 100vw;
  z-index: 99999;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.indexDetailPage .operation .want-btn {
  flex-shrink: 0;
  display: inline;
  font-size: 30rpx;
  padding: 14rpx 40rpx 20rpx;
  background: linear-gradient(to right, #ff8600, #e64e4e);
  border-radius: 30rpx;
  font-weight: bold;
  color: white;
  box-shadow: 20rpx 0 20rpx -20rpx #766d8b, -20rpx 0 20rpx -20rpx #766d8b;
}

.indexDetailPage .operation .want-btn-gray {

  background: linear-gradient(to right, #cbcbcb, #766d6d);
  color: #f0f0f0;
}

.indexDetailPage .commenting {
  height: auto;
  background: #ffffff;
  display: flex;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
}

.indexDetailPage .commenting .commentInput {
  margin-right: 20rpx;
  background: #f0f0f0;
  padding: 0 15rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
}

.status {
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  font-size: 40rpx;
  display: block;
  border: 2rpx solid #a09393;
  padding: 30rpx 10rpx;
  border-radius: 50%;
  color: white;
  background-color: rgba(0, 0, 0, .5);
  transform: rotate(-25deg);
  z-index: 3;
}