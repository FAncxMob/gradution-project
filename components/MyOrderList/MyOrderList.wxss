.myOrderList {
    margin-top: 80rpx;
    padding: 20rpx;
}

.myOrderList .list {
    padding: 20rpx;
    border: 2rpx solid #c2bebe;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
}

.myOrderList .bottom-box {
    margin: 10rpx -20rpx -5px;
    padding: 20rpx 20rpx 10rpx;
}

.twoSideShadow {
    box-shadow: 20rpx 0 20rpx -20rpx #766d8b, -20rpx 0 20rpx -20rpx #766d8b;
}

.borderBottom {
    border-bottom: 2rpx solid #c2bebe;
}

.df {
    display: flex;
}

.gray-1 {
    color: #5D5D5D;
}

.myOrderList .pic {
    width: 40%;
    flex-shrink: 0;
    border: 4rpx solid #e0cfbb;
}


.mr20 {
    margin-right: 20rpx !important;
}

.flex-column {
    flex-direction: column;
}

.align-center {
    align-items: center;
}

.justify-between {
    justify-content: space-between;
}

.fz30 {
    font-size: 30rpx !important;
}

.fwb {
    font-weight: bold;
}

.text-ellipsis-row1 {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}

.text-ellipsis-row3 {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}

.fz26 {
    font-size: 26rpx !important;
}

.mr10 {
    margin-right: 10rpx !important;
}

.mb20 {
    margin-bottom: 20rpx !important;
}

.borderTop {
    border-top: 2rpx solid #c2bebe;
}

.gray-3 {
    color: #ACA27D;
}

.fz22 {
    font-size: 22rpx !important;
}

.pl20 {
    padding-left: 20rpx !important;
}

.myOrderList .small-btn {
    flex-shrink: 0;
    display: inline;
    font-size: 26rpx;
    padding: 10rpx 20rpx 10rpx 10rpx;
    background: #cbcbcb;
    border-radius: 10rpx;
    font-weight: bold;
    color: #766d6d;
    box-shadow: 20rpx 0 20rpx -20rpx #766d8b, -20rpx 0 20rpx -20rpx #766d8b;
}