.switchTab {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    display: flex;
    background: #ffffff;
    box-shadow: 0 2rpx 5rpx #9D9D9B;
    z-index: 99999;
}

.switchTab .tab {
    flex: 1;
    text-align: center;
    line-height: 80rpx;
    font-weight: bold;
    color: #5D5D5D;
    font-size: 26rpx;
}

.switchTab .selected {
    transition: all 0.2s;
    color: #4585F5;
    padding-bottom: 6rpx;
    border-bottom: 4rpx solid #4585F5;
}