/* utils/index.wxss */
.switchBar {
  position: fixed;
  top: 0;
  width: 100%;
  flex-direction: row;
  justify-content: left;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  background-color: #fff;
  padding-left: 30rpx;
  z-index: 1;
}
.switchBar .switcher {
  padding-right: 60rpx;
}
.switchBar .switcher .bottomLine {
  opacity: 0;
  width: 100%;
  height: 8rpx;
  border-radius: 10rpx;
}
.switchBar .switcher text {
  padding: 10rpx 10rpx 15rpx;
  text-align: center;
  display: block;
}
.switchBar .selected .bottomLine {
  opacity: 1;
}
.switchBar .selected text {
  color: #000;
}
