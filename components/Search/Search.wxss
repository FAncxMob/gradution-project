.search {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;

    background: #ffffff;
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #98989d;
    padding: 0 30rpx;
    box-sizing: border-box;
}

.wrapper {
    position: relative;
    width: 90vw;
    height: 70%;
    display: flex;
    align-items: center;
}

.search-input {
    width: 100%;
    height: 100%;
    padding-left: 80rpx;
    padding-right: 20rpx;
    background: #f7f7f7;
    border-radius: 20rpx;
    box-sizing: border-box;
}

.searchIcon-left {
    position: absolute;
    left: 20rpx;
    z-index: 99999;
}

.searchIcon-right {
    position: absolute;
    right: 10rpx;
    z-index: 99999;
}