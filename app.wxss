@import "./icon/icon.wxss";
@import "./common/style.wxss";

.tag {
  color: rgb(194, 190, 190);
  border: 2rpx solid rgb(194, 190, 190);
  border-radius: 10rpx;
  margin-right: 10rpx;
}

.moreInfo {
  color: rgb(88, 78, 78);
  font-size: 28rpx;
}

.avatar {
  flex-shrink: 0;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #e0cfbb;
}

.avatar-small {
  width: 80rpx;
  height: 80rpx;
}

.small-btn {
  flex-shrink: 0;
  display: inline;
  font-size: 26rpx;
  padding: 10rpx 20rpx 10rpx 10rpx;
  background: #cbcbcb;
  border-radius: 10rpx;
  font-weight: bold;
  color: #766d6d;
  box-shadow: 20rpx 0 20rpx -20rpx #766d8b, -20rpx 0 20rpx -20rpx #766d8b;
}

.follow-btn {
  background: #ffa440;
  padding: 10rpx 30rpx;
  color: white;
  box-shadow: 20rpx 0 20rpx -20rpx #766d8b, -20rpx 0 20rpx -20rpx #766d8b;
}

.twoSideShadow {
  box-shadow: 20rpx 0 20rpx -20rpx #766d8b, -20rpx 0 20rpx -20rpx #766d8b;
}

.bottomShadow {
  box-shadow: 0rpx 20rpx 20rpx -20rpx #766d8b
}

.setBorder {
  border: 2rpx solid rgb(194, 190, 190);
}

.pic-box {
  display: flex;
  flex-wrap: wrap;
}

.pic {
  width: 40%;
  flex-shrink: 0;
  border: 4rpx solid #e0cfbb;
}

page {
  background: #f5f5f5;
}

.tag-orange {
  font-size: 26rpx;
  border-radius: 10rpx;
  padding: 5rpx 10rpx;
  background: #EEE2D3;
  color: #FF8600;
}

.tag-gray {
  font-size: 26rpx;
  border-radius: 10rpx;
  padding: 5rpx 10rpx;
  background: #D6D6D6;
  color: #5B6B73;
}

.swiper-pic {
  width: 100vw;
  height: 300rpx;
}